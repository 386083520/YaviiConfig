<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
   android:orientation="vertical">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/bg"
      android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="硬件配置助手"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textColor="#D4D4D4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
      <TextView
          android:id="@+id/et_ip"
          android:layout_width="0dp"
          android:layout_weight="3"
         android:layout_gravity="center_vertical"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:textColor="#ffffff"
          />

      <ImageView
          android:id="@+id/fresh_iv"
          android:layout_width="40dp"
          android:layout_height="20dp"
          android:src="@drawable/fresh3"
          android:layout_gravity="center"

          android:layout_marginRight="70dp"
          android:onClick="fresh"
          />

      <Button
          android:id="@+id/bt_connect"
          android:layout_width="60dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="连接"
          android:padding="10dp"
          android:textColor="#99CCFF"
          android:background="@drawable/button"
          android:textSize="18sp"
          android:layout_marginRight="25dp"
          android:layout_marginLeft="25dp"
          />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="5"
          android:layout_height="wrap_content"

          android:orientation="vertical"
          >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
          <TextView
              android:layout_marginLeft="20dp"
              android:layout_width="80dp"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:textColor="#D4D4D4"
              android:textSize="15sp"
              android:layout_gravity="center_vertical"
              android:text="WIFI     账号"/>

          <EditText
              android:id="@+id/wifi_et"
              android:layout_width="fill_parent"
              android:layout_height="36dip"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="2dp"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:padding="5dp"
              android:background="@drawable/bg_edittext_selector"
              android:text="yavii"
              android:textColor="#000000"
              android:textSize="15dip"
              />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <TextView
              android:layout_marginLeft="20dp"

              android:layout_height="wrap_content"
              android:textColor="#D4D4D4"
              android:layout_width="80dp"
              android:gravity="center"
              android:textSize="15sp"
              android:layout_gravity="center_vertical"
              android:text="密  码"
              android:id="@+id/textView" />

          <EditText
              android:id="@+id/wifi_pass_et"
              android:layout_width="fill_parent"
              android:layout_height="36dip"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="2dp"
              android:layout_marginTop="2dp"
              android:layout_marginBottom="2dp"
              android:padding="5dp"
              android:textColor="#000000"
              android:background="@drawable/bg_edittext_selector"
              android:text="yavii123"
              android:textSize="15dip"
              />
        </LinearLayout>
      </LinearLayout>
      <Button
          android:layout_width="60dp"
          android:layout_height="match_parent"
          android:padding="10dp"
          android:layout_margin="25dp"
          android:text="确定"
          android:onClick="send1"
          android:textColor="#99CCFF"
          android:background="@drawable/button"
          android:textSize="18sp"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="5"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
          <TextView
              android:layout_marginLeft="20dp"
              android:layout_width="80dp"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:textColor="#D4D4D4"

              android:textSize="15sp"
              android:layout_gravity="center_vertical"
              android:text="服务器     IP"/>
          <EditText
              android:id="@+id/service_et_ip"
              android:layout_width="fill_parent"
              android:layout_height="36dip"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="2dp"
              android:layout_marginTop="2dp"
              android:layout_marginBottom="2dp"
              android:padding="5dp"
              android:textColor="#000000"
              android:background="@drawable/bg_edittext_selector"
              android:text="192.168.0.255"
              android:textSize="15dip"
              />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
          <TextView

              android:layout_marginLeft="20dp"
              android:layout_width="80dp"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:textColor="#D4D4D4"
              android:textSize="15sp"

              android:layout_gravity="center_vertical"
              android:text="服务器端口"/>
          <EditText
              android:id="@+id/service_et_port"
              android:layout_width="fill_parent"
              android:layout_height="36dip"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="2dp"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:padding="5dp"
              android:textColor="#000000"
              android:background="@drawable/bg_edittext_selector"
              android:text="1256"
              android:textSize="15dip"
              />
        </LinearLayout>

      </LinearLayout>

      <Button
          android:id="@+id/bt_sure2"
          android:layout_width="60dp"
          android:padding="10dp"
          android:layout_margin="25dp"
          android:layout_height="match_parent"
          android:text="确定"
          android:onClick="send2"
          android:textColor="#99CCFF"
          android:background="@drawable/button"
          android:textSize="18sp"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          />
      </LinearLayout>


    <EditText
        android:id="@+id/et_recevier"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"

        android:background="@drawable/bg_edittext_selector"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <AutoCompleteTextView
          android:id="@+id/et_send"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:text="\@MODE:0"
          android:padding="5dp"
          android:layout_gravity="center_vertical"
          android:textColor="#000000"
          android:background="@drawable/bg_edittext_selector"
          android:completionThreshold="1"
          />

      <Button
          android:id="@+id/bt_send"
          android:layout_width="60dp"
          android:layout_height="wrap_content"
          android:onClick="send"
          android:padding="10dp"
          android:layout_gravity="center_vertical"
          android:text="发送"
          android:textColor="#99CCFF"
          android:background="@drawable/button"
          android:textSize="18sp"

          android:layout_marginLeft="25dp"
          android:layout_marginRight="25dp"
          />
    </LinearLayout>
  </LinearLayout>


</LinearLayout>

